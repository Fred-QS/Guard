<div class="absolute top-0 left-0 w-full flex items-center justify-center z-20 px-2">
    <div class="w-full max-w-[600px] bg-gray-800 border border-gray-600 shadow-lg rounded-2xl p-4">
        <h3 class="font-bold text-xl text-center mb-8 text-emerald-500 flex flex-col items-center justify-center">{{ data.Names }}<span class="font-light rounded-full border border-gray-600 px-2 py-1 text-xs mt-2">{{ ('containers.state.' ~ data.State)|trans|capitalize }}</span></h3>
        <ul class="flex flex-col items-center justify-center">
            {% for key,value in data %}
                {% if key is not same as 'Names' and key is not same as 'CreatedAtRaw' and key is not same as 'State' and value|length > 0 %}
                    <li class="overflow-hidden flex items-center justify-start w-full{% if loop.index > 1 %} mt-2{% endif %}" title="{{ value }}">
                        <span class="font-bold text-sm">{{ ('containers.label.' ~ key|lower)|trans|capitalize }}</span>:&nbsp;
                        <span class="p-1 border border-gray-600 bg-gray-800 text-emerald-700 duration-200 cursor-pointer hover:bg-gray-600 hover:text-emerald-500 mr-2 rounded-md" title="{{ 'containers.tooltip.copy'|trans|capitalize }}">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-4 text-inherit">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 17.25v3.375c0 .621-.504 1.125-1.125 1.125h-9.75a1.125 1.125 0 0 1-1.125-1.125V7.875c0-.621.504-1.125 1.125-1.125H6.75a9.06 9.06 0 0 1 1.5.124m7.5 10.376h3.375c.621 0 1.125-.504 1.125-1.125V11.25c0-4.46-3.243-8.161-7.5-8.876a9.06 9.06 0 0 0-1.5-.124H9.375c-.621 0-1.125.504-1.125 1.125v3.5m7.5 10.375H9.375a1.125 1.125 0 0 1-1.125-1.125v-9.25m12 6.625v-1.875a3.375 3.375 0 0 0-3.375-3.375h-1.5a1.125 1.125 0 0 1-1.125-1.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H9.75" />
                    </svg>
                    </span>
                        <span class="truncate font-light text-sm text-emerald-500">{{ value }}</span>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
        <div class="flex items-center justify-center mt-8">
            <button class="cursor-pointer flex justify-center rounded-md bg-emerald-500 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-emerald-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-500" type="button" data-containers-target="closeDetails">{{ 'containers.button.close'|trans|capitalize }}</button>
        </div>
    </div>
</div>
