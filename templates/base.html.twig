            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/styles/default.min.css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/10.6.0/styles/atom-one-dark.min.css" integrity="sha512-Fcqyubi5qOvl+yCwSJ+r7lli+CO1eHXMaugsZrnxuU4DVpLYWXTVoHy55+mCb4VZpMgy7PBhV7IiymC0yu9tkQ==" crossorigin="anonymous" />
        {% endblock %}

        {% include 'components/scripts.html.twig' %}

        {% block javascripts %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/highcharts/8.2.2/highcharts.js" integrity="sha512-PpL09bLaSaj5IzGNx6hsnjiIeLm9bL7Q9BB4pkhEvQSbmI0og5Sr/s7Ns/Ax4/jDrggGLdHfa9IbsvpnmoZYFA==" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.9.0/highlight.min.js"></script>
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}

    </head>
    <body class="h-screen" data-turbo="false">
    <div class="h-full fixed top-0 left-0 w-full h-full">
        {% include 'commons/aside.html.twig' %}
        <div class="lg:pl-72 h-full bg bg-gray-900">
            {% include 'commons/header.html.twig' %}
            <main id="admin-main" class="relative py-6 border-t lg:border-l border-emerald-500/10">
                {% block modal %}{% endblock %}
                <div id="admin-wrapper" class="px-4 sm:px-6 lg:px-8 h-full overflow-y-auto overflow-x-hidden relative z-10 text-gray-600">
                    {% include 'components/title.html.twig' %}
                    {% block body %}{% endblock %}
                </div>
                <div id="design-background" class="absolute top-0 left-0 w-full h-full z-0 overflow-hidden">
                    <img class="opacity-20 absolute bottom-0 right-0" src="{{ asset('media/images/bg.png') }}" alt="background">
                </div>
            </main>
        </div>
    </div>
    </body>
</html>
