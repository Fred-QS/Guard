{% extends 'base.html.twig' %}

{% block title %}{{ 'server.state'|trans|capitalize }} - {% endblock %}

{% block modal %}
    <div id="server-modal" class="modal absolute z-50 bg-gray-700/50 w-full h-full top-0 left-0 hidden lg:p-6 p-4">
        <div class="absolute z-40 px-2 py-1 rounded-lg top-1 lg:top-2 left-1 lg:left-4 border-2 border-emerald-500 bg-gray-900">
            <p id="server-modal-filename" class="text-emerald-500 text-sm font-bold"></p>
        </div>
        <div class="absolute z-20 top-1 lg:top-2 right-1 lg:right-2 flex items-center justify-center cursor-pointer text-emerald-500 rounded-full bg-gray-900" id="server-modal-close">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-8">
                <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
            </svg>
        </div>
        <pre class="text-xs font-mono relative z-10 bg-gray-900 text-emerald-500 overflow-auto w-full h-full rounded-2xl p-6 border border-emerald-500"><code id="server-modal-container"></code></pre>
    </div>
{% endblock %}

{% block body %}
    {% import 'components/folder-tree.html.twig' as folderTreeList %}
    {% import 'components/drives.html.twig' as drivesList %}
    {% import 'components/drive-list.html.twig' as driveList %}
    <div data-controller="server">
        <div>
            <div>
                <p class="text-lg font-bold">{{ 'server.folder.tree'|trans|capitalize }} <span class="text-emerald-500">{{ serverDir }}</span> :</p>
                <div id="arbo-container" class="relative">
                    <div id="arbo-loader" class="hidden absolute z-10 top-0 left-0 w-full h-full bg-gray-700/30 rounded-xl text-emerald-500 flex items-center justify-center">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-12 animate-spin">
                            <path d="M17.004 10.407c.138.435-.216.842-.672.842h-3.465a.75.75 0 0 1-.65-.375l-1.732-3c-.229-.396-.053-.907.393-1.004a5.252 5.252 0 0 1 6.126 3.537ZM8.12 8.464c.307-.338.838-.235 1.066.16l1.732 3a.75.75 0 0 1 0 .75l-1.732 3c-.229.397-.76.5-1.067.161A5.23 5.23 0 0 1 6.75 12a5.23 5.23 0 0 1 1.37-3.536ZM10.878 17.13c-.447-.098-.623-.608-.394-1.004l1.733-3.002a.75.75 0 0 1 .65-.375h3.465c.457 0 .81.407.672.842a5.252 5.252 0 0 1-6.126 3.539Z" />
                            <path fill-rule="evenodd" d="M21 12.75a.75.75 0 1 0 0-1.5h-.783a8.22 8.22 0 0 0-.237-1.357l.734-.267a.75.75 0 1 0-.513-1.41l-.735.268a8.24 8.24 0 0 0-.689-1.192l.6-.503a.75.75 0 1 0-.964-1.149l-.6.504a8.3 8.3 0 0 0-1.054-.885l.391-.678a.75.75 0 1 0-1.299-.75l-.39.676a8.188 8.188 0 0 0-1.295-.47l.136-.77a.75.75 0 0 0-1.477-.26l-.136.77a8.36 8.36 0 0 0-1.377 0l-.136-.77a.75.75 0 1 0-1.477.26l.136.77c-.448.121-.88.28-1.294.47l-.39-.676a.75.75 0 0 0-1.3.75l.392.678a8.29 8.29 0 0 0-1.054.885l-.6-.504a.75.75 0 1 0-.965 1.149l.6.503a8.243 8.243 0 0 0-.689 1.192L3.8 8.216a.75.75 0 1 0-.513 1.41l.735.267a8.222 8.222 0 0 0-.238 1.356h-.783a.75.75 0 0 0 0 1.5h.783c.042.464.122.917.238 1.356l-.735.268a.75.75 0 0 0 .513 1.41l.735-.268c.197.417.428.816.69 1.191l-.6.504a.75.75 0 0 0 .963 1.15l.601-.505c.326.323.679.62 1.054.885l-.392.68a.75.75 0 0 0 1.3.75l.39-.679c.414.192.847.35 1.294.471l-.136.77a.75.75 0 0 0 1.477.261l.137-.772a8.332 8.332 0 0 0 1.376 0l.136.772a.75.75 0 1 0 1.477-.26l-.136-.771a8.19 8.19 0 0 0 1.294-.47l.391.677a.75.75 0 0 0 1.3-.75l-.393-.679a8.29 8.29 0 0 0 1.054-.885l.601.504a.75.75 0 0 0 .964-1.15l-.6-.503c.261-.375.492-.774.69-1.191l.735.267a.75.75 0 1 0 .512-1.41l-.734-.267c.115-.439.195-.892.237-1.356h.784Zm-2.657-3.06a6.744 6.744 0 0 0-1.19-2.053 6.784 6.784 0 0 0-1.82-1.51A6.705 6.705 0 0 0 12 5.25a6.8 6.8 0 0 0-1.225.11 6.7 6.7 0 0 0-2.15.793 6.784 6.784 0 0 0-2.952 3.489.76.76 0 0 1-.036.098A6.74 6.74 0 0 0 5.251 12a6.74 6.74 0 0 0 3.366 5.842l.009.005a6.704 6.704 0 0 0 2.18.798l.022.003a6.792 6.792 0 0 0 2.368-.004 6.704 6.704 0 0 0 2.205-.811 6.785 6.785 0 0 0 1.762-1.484l.009-.01.009-.01a6.743 6.743 0 0 0 1.18-2.066c.253-.707.39-1.469.39-2.263a6.74 6.74 0 0 0-.408-2.309Z" clip-rule="evenodd" />
                        </svg>
                    </div>
                    <div id="arbo-wrapper" class="my-4 border border-gray-600 rounded-xl overflow-auto lg:max-h-[400px] max-h-[60vh]">
                        {{ folderTreeList.list(folderTree, isFirst, serverDir) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="mt-8">
            <div>
                <label>
                    <span class="text-lg font-bold mb-4 flex">{{ 'server.disk.space.report'|trans|capitalize }}</span>
                    {{ drivesList.list(drives, mainDrive) }}
                </label>
                <div>
                    <div>
                        <ul class="mb-4 text-sm text-emerald-500" data-server-target="drivesLister">
                            {{ driveList.list(drives, mainDrive, null) }}
                        </ul>
                        <div>
                            <button data-server-target="drivesRefresh" class="flex justify-center rounded-md bg-emerald-500 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-emerald-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-emerald-500" type="button">{{ 'refresh'|trans|capitalize }}</button>
                        </div>
                    </div>
                    <div class="mt-4">
                        <div id="charts" data-server-target="chart" data-drive="{{ mainDriveInfos }}" data-index="{{ index }}" class="border border-gray-600 rounded-xl bg-gradient-to-r from-gray-900/50 to-emerald-800/40 shadow-inner"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
