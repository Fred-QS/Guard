<div class="sticky top-0 z-40 flex h-16 shrink-0 items-center gap-x-4 bg-customBlack px-4 sm:gap-x-6 sm:px-6 lg:px-8" data-controller="header">
    <button type="button" class="-m-2.5 p-2.5 text-emerald-700 lg:hidden" data-header-target="openMenuMobile">
        <span class="sr-only">{{ 'header.open_side_bar'|trans|capitalize }}</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
    </button>

    <!-- Separator -->
    <div class="h-6 w-px bg-emerald-700 lg:hidden" aria-hidden="true"></div>

    <div class="flex flex-1 gap-x-4 self-stretch lg:gap-x-6">
        <form class="relative flex flex-1" action="#" method="GET">
            <label for="search-field" class="sr-only">{{ 'header.search.placeholder'|trans|capitalize }}</label>
            <svg class="pointer-events-none absolute inset-y-0 left-0 h-full w-5 text-emerald-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
            </svg>
            <input id="search-field" class="bg-customBlack block h-full w-full border-0 py-0 pl-8 pr-0 text-emerald-500 placeholder:text-emerald-700 focus:ring-0 sm:text-sm" placeholder="{{ 'header.search.placeholder'|trans|capitalize }}..." type="search" autocorrect="false" name="search" spellcheck="false">
        </form>
        <div class="flex items-center gap-x-4 lg:gap-x-6">
            <a href="{{ path('app_notifications') }}" class="-m-2.5 p-2.5 text-emerald-400 hover:text-emerald-500 relative">
                <span class="sr-only">{{ 'header.view_notifications'|trans|capitalize }}</span>
                <svg class="h-6 w-6 relative z-0" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
                </svg>
                <span class="absolute top-2 right-2 rounded-full h-3 w-3 border border-white bg-emerald-500"></span>
            </a>

            <!-- Separator -->
            <div class="hidden lg:block lg:h-6 lg:w-px lg:bg-emerald-700" aria-hidden="true"></div>

            <!-- Profile dropdown -->
            <div class="relative">
                <button type="button" class="-m-1.5 flex items-center p-1.5" id="user-menu-button" aria-expanded="false" aria-haspopup="true" data-header-target="openProfileButton">
                    <span class="sr-only">{{ 'header.open_user_menu'|trans|capitalize }}</span>
                    <img class="h-8 w-8 rounded-full bg-gray-50" src="{% if gravatar_exists(app.user.getEmail()) is same as (false) %}{{ asset('media/images/default-avatar.jpg') }}{% else %}{{ gravatar(app.user.getEmail()) }}{% endif %}" alt="">
                    <span class="hidden lg:flex lg:items-center">
                        <span class="ml-4 text-sm font-semibold leading-6 text-gray-600" aria-hidden="true">{{ app.user.getFirstname() }} {{ app.user.getLastname() }}</span>
                        <svg class="ml-2 h-5 w-5 text-emerald-700" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                          <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                        </svg>
                    </span>
                </button>

                <div class="absolute right-0 z-10 mt-2.5 w-max origin-top-right rounded-md bg-customBlack border border-gray-700 py-2 shadow-lg ring-1 ring-gray-900/5 focus:outline-none transform opacity-0 scale-95 transition ease-out duration-100" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1" data-header-target="profileDropdown">
                    <a href="{{ path('app_profile') }}" class="{% if app.request.get('_route') is same as 'app_profile' %}text-emerald-500 {% else %}hover:text-emerald-500 text-gray-600 {% endif %}block px-3 py-1 text-sm leading-6 duration-200" role="menuitem" tabindex="-1" id="user-menu-item-0">{{ 'header.your_profile'|trans|capitalize }}</a>
                    <a href="/logout" class="block px-3 py-1 text-sm leading-6 text-gray-600 duration-200 hover:text-emerald-500" role="menuitem" tabindex="-1" id="user-menu-item-1">{{ 'header.sign_out'|trans|capitalize }}</a>
                </div>
            </div>
        </div>
    </div>
</div>
