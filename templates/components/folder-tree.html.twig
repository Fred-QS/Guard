{% macro list(list, isFirst, path) %}
    <ul{% if isFirst is same as (true) %} id="first-tree"{% endif %} data-server-target="tree" class="tree" data-controller="tree">
        {% if isFirst is same as (false) %}
            <li class="py-3 px-4 cursor-pointer flex justify-start items-center odd:bg-gray-700/10 hover:bg-gray-800 duration-200" data-tree-target="return" data-path="{{ path }}">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 stroke-emerald-500 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3" />
                </svg>
            </li>
        {% endif %}
        {% for file in list %}
            <li data-tree-target="{% if file.isFile is same as (true) %}file{% else %}folder{% endif %}" class="py-3 px-4 cursor-pointer flex justify-start items-center odd:bg-gray-700/10 hover:bg-gray-800 duration-200" data-path="{{ file.path }}" data-hash="{{ file.hash }}">
                {% if file.isFile is same as (true) %}
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="h-5 w-5 stroke-emerald-500 mr-2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
                    </svg>
                {% elseif file.isDir is same as (true) %}
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="h-5 w-5 stroke-emerald-500 mr-2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z" />
                    </svg>
                {% endif %}
                <p>
                    <span class="font-bold">{{ file.name }}</span>
                    {% if file.size is not null %}
                        <span class="text-emerald-700 text-xs ml-1">{{ file.size }}</span>
                    {% endif %}
                </p>
            </li>
        {% endfor %}
    </ul>
{% endmacro %}
